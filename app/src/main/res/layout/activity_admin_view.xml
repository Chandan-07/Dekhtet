<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wordpress.keepup395.dekhte.AdminView"
    android:background="@android:color/background_light">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:text="user"
    android:id="@+id/use"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/time"
    android:layout_below="@id/use"
    android:layout_alignRight="@id/use"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bike"
        android:layout_below="@+id/use"
        android:id="@+id/bikenam"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bikenam"
        android:id="@+id/cos"
        android:text="cost"
        android:textColor="@android:color/holo_green_dark" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cos"
        android:text="phone"
        android:layout_toEndOf="@+id/call"
        android:id="@+id/phon"
        android:textColor="@color/colorPrimary" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/call"
        android:layout_marginEnd="3dp"

        android:layout_below="@id/cos"
        android:text="OTP:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ots"
        android:layout_below="@+id/phon"
        android:text="OTP  : "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatId"

        android:layout_toRightOf="@+id/ots"
        android:layout_below="@id/phon"
        android:text="OTP:"
        android:textColor="@android:color/holo_orange_dark" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:text="emai"
        android:layout_below="@id/ots"/>

    <Button
        android:layout_width="180dp"
        android:layout_marginTop="30dp"
        android:text="remove user"
        android:id="@+id/remove"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatId"
        android:background="@android:color/holo_green_light" />
</RelativeLayout>
