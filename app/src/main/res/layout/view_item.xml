<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"

    android:orientation="vertical"
    android:padding="10dp">



    <TextView
        android:id="@+id/bikename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user"

        android:layout_marginBottom="5dp"

        android:layout_weight="1"
        android:text="bikename" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bikename"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bikename"
        android:layout_marginBottom="10dp"

        android:layout_weight="1"
        android:text="user"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cost"
        android:layout_weight="1"
        android:text="phone"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/user"
        android:layout_weight="1"
        android:text="cost"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

android:layout_below="@+id/bikename"
        android:layout_marginBottom="5dp"

        android:layout_weight="1"
        android:text="startdate"
       />

    <TextView
        android:id="@+id/enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startdate"
        android:text="enddate" />


    <TextView
        android:id="@+id/id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enddate"
        android:text="OTP: " />
    <TextView
        android:id="@+id/otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enddate"
        android:layout_toEndOf="@id/id1" />

    <ImageView
        android:id="@+id/not"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/phone"
        android:background="@drawable/idp_button_background_phone" />


</RelativeLayout>